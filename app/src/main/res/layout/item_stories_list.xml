<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/list_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/_15sdp"
        app:layout_constraintEnd_toStartOf="@id/story_list_switch_rv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RelativeLayout
        android:id="@+id/story_list_switch_rv"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/list_item_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/list_item_title"
        app:layout_constraintTop_toTopOf="@id/list_item_title">

        <Switch
            android:id="@+id/story_list_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>